<?xml version="1.0" encoding="utf-8"?><!--故事集概要展示-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--故事标识-->
    <TextView
        android:id="@+id/story_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="天故事" />

    <!--头像-->
    <ImageView
        android:id="@+id/user_head_portrait"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/story_tag"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test" />

    <!--故事题目-->
    <TextView
        android:id="@+id/user_story_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/story_tag"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@id/user_head_portrait"
        android:layout_toEndOf="@id/user_head_portrait"
        android:text="故事题目：nelson的故事"
        android:textSize="14sp" />
    <!--用户昵称-->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_story_tittle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/user_head_portrait"
        android:text="作者：nelson"
        android:textSize="14sp" />
    <!--最后编辑时间-->
    <TextView
        android:id="@+id/last_edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/user_head_portrait"
        android:text="最后编辑时间：1900年1月1日 00时00分00秒"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_edit_time"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thumb_ups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="点赞数：0" />

        <TextView
            android:id="@+id/thumb_downs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="反对数：0" />

        <TextView
            android:id="@+id/collecteds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="收藏数：0" />

        <TextView
            android:id="@+id/forwards"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="转发数：0" />
    </LinearLayout>
</RelativeLayout>