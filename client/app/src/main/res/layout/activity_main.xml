<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <!--转移地址输入框-->
    <LinearLayout
        android:id="@+id/transfer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/transfer_location_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入你想去的地点"
            android:singleLine="true" />

        <Button
            android:id="@+id/resultShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结果" />
    </LinearLayout>

    <!--顶部搜索栏-->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">
        <!--选择文本搜索还是标签搜索-->
        <Spinner
            android:id="@+id/choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <EditText
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:singleLine="true" />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:text="搜索" />
    </LinearLayout>

    <!--标签显示-->
    <RelativeLayout
        android:id="@+id/all_tags"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone">

        <Button
            android:id="@+id/close_all_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="清空" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/close_all_tags">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:shrinkColumns="0,1,2,3,4"
                android:stretchColumns="0,1,2,3,4">

                <TableRow>

                    <Button
                        android:id="@+id/t01"
                        android:text="搞笑"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t02"
                        android:text="情感"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t03"
                        android:text="萌宠"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t04"
                        android:text="健康"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t05"
                        android:text="历史"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/t06"
                        android:text="运动"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t07"
                        android:text="科普"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t08"
                        android:text="美食"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t09"
                        android:text="明星"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t10"
                        android:text="游戏"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/t11"
                        android:text="电影"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t12"
                        android:text="新鲜事"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t13"
                        android:text="电视剧"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t14"
                        android:text="美女"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t15"
                        android:text="国际"
                        android:textSize="13sp" />
                </TableRow>


                <TableRow>

                    <Button
                        android:id="@+id/t16"
                        android:text="摄影"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t17"
                        android:text="问答"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t18"
                        android:text="财经"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t19"
                        android:text="音乐"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t20"
                        android:text="科技"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/t21"
                        android:text="体育"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t22"
                        android:text="综艺"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t23"
                        android:text="动漫"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t24"
                        android:text="时尚"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t25"
                        android:text="法律"
                        android:textSize="13sp" />
                </TableRow>


                <TableRow>

                    <Button
                        android:id="@+id/t26"
                        android:text="股市"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t27"
                        android:text="校园"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t28"
                        android:text="军事"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t29"
                        android:text="种草"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t30"
                        android:text="美妆"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/t31"
                        android:text="读书"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t32"
                        android:text="旅游"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t33"
                        android:text="星座"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t34"
                        android:text="养生"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t35"
                        android:text="汽车"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/t36"
                        android:text="设计"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t37"
