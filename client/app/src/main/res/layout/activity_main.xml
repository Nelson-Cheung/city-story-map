                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/t48"
                        android:text="公益"
                        android:textSize="13sp" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transfer_bar" />

    <ListView
        android:id="@+id/location_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/transfer_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:visibility="gone" />


    <Button
        android:id="@+id/show_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/user"
        android:layout_marginLeft="10dp"
        android:text="显示"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/show"
        android:layout_marginLeft="10dp"
        android:text="用户"
        android:visibility="gone" />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/transfer_location"
        android:layout_marginLeft="10dp"
        android:text="搜索"
        android:visibility="gone" />

    <Button
        android:id="@+id/transfer_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLocate"
        android:layout_marginLeft="10dp"
        android:text="转移"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnLocate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showStory"
        android:layout_marginLeft="10dp"
        android:text="定位"
        android:visibility="gone" />

    <Button
        android:id="@+id/showStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:text="故事"
        android:visibility="gone" />
</RelativeLayout>